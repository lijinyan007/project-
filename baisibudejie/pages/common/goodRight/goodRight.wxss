.rightcell{
  width: 100%;
  height: 130rpx;
  color: #666;
  border-bottom: 1rpx solid #f1f1f1;
  overflow: hidden;
}
.avatar{
  float: left;
  height: 100%;
  width: 20%;

}
.avatar image{
  width: 90%;
  height: 80%;
  margin: 10% 2%;
}
.content{
  float: left;
  height: 100%;
  width: 55%;
}
.content .name,.content .fans{
  display: block;
  height: 50%;
  line-height: 65rpx;
}
.content .name{
  font-size: 30rpx;
  color: #333;
}
.content .fans{
  font-size: 24rpx;
  color: #e42e16;

}
button{
  float: right;
  width: 24%;
  font-size: 24rpx;
  text-align: center;
  line-height: 50rpx;
  height: 50rpx;
  margin-top: 40rpx;
  margin-right: 4rpx;
}
